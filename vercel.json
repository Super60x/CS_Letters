{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node@18"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ]
}
